    footer.footer
        .footer__top
            .container-fluid
                .footer__top-inner
                    .footer__menu
                        ul.footer-list
                            li.footer-list__item
                                a(href='#').footer-list__link About
                            li.footer-list__item
                                a(href='#').footer-list__link Shipping & Payment
                            li.footer-list__item
                                a(href='#').footer-list__link Bonus & Referral program
                            li.footer-list__item
